generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id    Int    @id @default(autoincrement())
  name  String
  image String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SizeOfClothing {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[] @relation("SizesOfClothing")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SizeOfBoots {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[] @relation("SizesOfBoots")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Color {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[] @relation("ProductColors")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id                 Int              @id @default(autoincrement())
  slug               String           @unique
  name               String
  images             String[]
  colors             Color[]          @relation("ProductColors")
  sizesOfClothing    SizeOfClothing[] @relation("SizesOfClothing")
  sizesOfBoots       SizeOfBoots[]    @relation("SizesOfBoots")
  price              Float
  oldPrice           Float?
  description        String
  materials          String
  careGuide          String
  shippingAndPayment String
  reviews            Review[]
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
}

model Review {
  id        Int     @id @default(autoincrement())
  rating    Float
  comment   String
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
